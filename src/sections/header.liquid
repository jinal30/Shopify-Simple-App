{% liquid 
  assign header_width_size = section.settings.logo_width | append: 'x' 
  assign headerLogo = section.settings.logo | img_url : header_width_size
  if section.settings.svg_logo != blank
      assign headerLogo = section.settings.svg_logo
  endif
  assign main_menu =  linklists[section.settings.menu]
  render 'drawer-menu', section: section , menu: main_menu

%}
