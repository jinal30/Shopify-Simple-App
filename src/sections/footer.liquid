{%  liquid  
  assign footer_bg_color = section.settings.footer_bg_color  
  assign sub_menu_footer = linklists[section.settings.sub_menu_footer]
%}

{% if section.settings.newsletter_id != blank %}
  <div class=" border-t-2 border-gray-400">
  <div class="page-width ">
    <div class="flex justify-between footer flex-wrap pt-3">
      <div class=" text-xl">{{ section.settings.footer_text }}</div>
      <div>
        <input
          type="text"
          value="Enter Your Email"
          class="email_text">
        <button class="footer_button">subscript</button>
      </div>
    </div>
  </div>
  </div>
{% endif %}

<div style="background-color: {{ section.settings.footer_bg_color }}">
  <div class="page-width">
    <div class="flex flex-wrap py-5 justify-center">
      {%- for block in section.blocks -%}
        {% liquid 
      assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.'
      assign sub_menu = linklists[block.settings.sub_menu]
    %}
        {%- case block.type -%}
          {%- when 'image' -%}
          <div class="md:w-1/5 w-1/2">
            {% if block.settings.image != blank %}
              <div class="overflow-hidden relative image-mask image-mask--{{ block.settings.image_shape }}">
                <img class="flex" src="{{ block.settings.image | img_url: '250x250' }}">
              </div>
            {% else %}
              {{ 'product-1' | placeholder_svg_tag }}
            {% endif %}
          </div>
          {%- when 'menu' -%}
          <div class="md:w-1/5 w-1/2 ">
            {% if block.settings.text != blank %}
              <div class="font-semibold pb-3">{{ block.settings.text }}</div>
            {% endif %}
            <div>
              <ul>
                {%- for link in sub_menu.links -%}
                  {%- liquid assign linkTitle = link.title | handleize-%}
                  <li>
                    <a href="{{ link.url }}" class=" {% if link.active %}font-ProximaBold{% endif %}">
                      {{ link.title }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          </div>

          {%- when 'navigation' -%}
          <div class="md:w-1/5 w-1/2 ">
            {% if block.settings.footer_text != blank %}
              <div class="font-semibold pb-3">{{ block.settings.footer_text }}</div>
            {% endif %}
            <div>
              <ul>
                {%- for link in sub_menu.links -%}
                  {%- liquid assign linkTitle = link.title | handleize-%}
                  <li>
                    <a href="{{ link.url }}" class=" {% if link.active %}font-ProximaBold{% endif %}">
                      {{ link.title }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          </div>

          {%- when 'contactus' -%}
          <div class="md:w-1/5 w-1/2 ">
            <div class="font-semibold pb-3">Get in touch</div>
            {% if block.settings.contact_text != blank %}
              <div>
                <a href="#">
                  <svg
                    aria-hidden="true"
                    focusable="false"
                    role="presentation"
                    class="icon icon-phone"
                    viewBox="0 0 64 64">
                    <defs>
                      <style>
                        .a {
                          fill: none;
                          stroke: #000;
                          stroke-width: 2px
                        }
                      </style>
                    </defs><path class="a" d="M18.4 9.65l10.2 10.2-6.32 6.32c2.1 7 6.89 12.46 15.55 15.55l6.32-6.32 10.2 10.2-8.75 8.75C25.71 50.3 13.83 38.21 9.65 18.4z"></path>
                </svg>
              </a>
              <a href="#" class="underline pl-2">{{ block.settings.contact_text }}</a>
            </div>
          {% endif %}
          <div>
            {% if block.settings.Email_us != blank %}
              <a href="#">
                <svg
                  aria-hidden="true"
                  focusable="false"
                  role="presentation"
                  class="icon icon-email"
                  viewBox="0 0 64 64">
                  <defs>
                    <style>
                      .cls-1 {
                        fill: none;
                        stroke: #000;
                        stroke-miterlimit: 10;
                        stroke-width: 2px
                      }
                    </style>
                  </defs><path class="cls-1" d="M63 52H1V12h62zM1 12l25.68 24h9.72L63 12M21.82 31.68L1.56 51.16m60.78.78L41.27 31.68"></path>
              </svg>
            </a>
            <a href="#" class="underline  pl-2">Email us</a>
          {% endif %}
        </div>

        <div>
          {% if block.settings.Chat_link != blank %}
            <a href="#"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-chat" viewBox="0 0 64 64"><defs><style>.cls-1{fill:none;stroke:#000;stroke-width:2px}</style></defs><path class="cls-1" d="M13.94 46.62a9 9 0 0 1-9-9V14a9 9 0 0 1 9-9h37.12a9 9 0 0 1 9 9v23.62a9 9 0 0 1-9 9h-1.68V59L36.44 46.62z"></path></svg></a>
            <a href="#" class="underline pl-2">Live Chat</a>
          {% endif %}
        </div>

        <div>
          {% if block.settings.social_icon != blank %}
            <div class="py-3">Follow Us</div>
            {% if  settings.instra_id != blank %}
