{% schema %}
  {
    "name": "footer",
    "settings": [
      {
        "type": "header",
        "content": "NEWSLETTER"
      },
      {
        "type": "checkbox",
        "id": "newsletter_id",
        "label": "Show newsletter signup"
      },
      {
        "type": "richtext",
        "id": "footer_text",
        "label": "Text"
      },
      {
        "type":"text",
        "id":"copyright_text",
        "label":"Additional copyright text"
      },{
        "type":"color",
        "id":"footer_bg_color",
        "label":"Background-color"
      },{
        "type": "link_list",
        "id": "sub_menu_footer",
        "label": "Policies Menu"
      } 
    ],
    "blocks": [
      {
        "name": "Image",
        "type": "image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "select",
            "id": "image_shape",
            "label": "Image Shape",
            "default": "square",
            "options": [
              {
                "value": "square",
                "label": "square"
              }, {
                "value": "rounded",
                "label": "Round"
              }, {
                "value": "landscape",
                "label": "landscape"
              }
            ]
          }
        ]
      }, {
        "name": "Menu",
        "type": "menu",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }, {
            "type": "link_list",
            "id": "sub_menu",
            "label": "sub-menu"
          }, {
            "type": "checkbox",
            "id": "chek_account",
            "label": "Add 'My account' link if customer accounts enabled"
          }
        ]
      }, {
        "name": "Navigation",
        "type": "navigation",
        "settings": [
          {
            "type": "text",
            "id": "footer_text",
            "label": "Text"
          }, {
            "type": "link_list",
            "id": "sub_menu",
            "label": "sub-menu"
          }, {
            "type": "checkbox",
            "id": "chek_account",
            "label": "Add 'My account' link if customer accounts enabled"
          }
        ]
      }, {
        "name": "contactus",
        "type": "contactus",
        "settings": [
          {
            "type": "text",
            "id": "contact_text",
            "label": "Phone number"
          }, {
            "type": "page",
            "id": "Email_us",
            "label": "Contact page"
          }, {
            "type": "page",
            "id": "Chat_link",
            "label": "Chat link"
          },{
            "type": "header",
            "content": "SOCIAL"
          },
          {
            "type": "checkbox",
            "id":"social_icon",
            "label": "Show social accounts",
            "default": true
          }
        ]
      }
    ]
  }
{% endschema %}