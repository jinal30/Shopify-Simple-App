            {% endif %}
            {% if settings.youtube_id != blank %}
              <span><a target="_blank" href="{{ settings.youtube_id }}"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-youtube pr-1" viewBox="0 0 21 20"><path fill="#444" d="M-.196 15.803q0 1.23.812 2.092t1.977.861h14.946q1.165 0 1.977-.861t.812-2.092V3.909q0-1.23-.82-2.116T17.539.907H2.593q-1.148 0-1.969.886t-.82 2.116v11.894zm7.465-2.149V6.058q0-.115.066-.18.049-.016.082-.016l.082.016 7.153 3.806q.066.066.066.164 0 .066-.066.131l-7.153 3.806q-.033.033-.066.033-.066 0-.098-.033-.066-.066-.066-.131z"></path></svg></a></span>
            {% endif %}
            {% if settings.twitter_id != blank %}
              <span><a target="_blank" href="{{ settings.twitter_id }}"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-twitter pr-1" viewBox="0 0 32 32"><path fill="#444" d="M31.281 6.733q-1.304 1.924-3.13 3.26 0 .13.033.408t.033.408q0 2.543-.75 5.086t-2.282 4.858-3.635 4.108-5.053 2.869-6.341 1.076q-5.282 0-9.65-2.836.913.065 1.5.065 4.401 0 7.857-2.673-2.054-.033-3.668-1.255t-2.266-3.146q.554.13 1.206.13.88 0 1.663-.261-2.184-.456-3.619-2.184t-1.435-3.977v-.065q1.239.652 2.836.717-1.271-.848-2.021-2.233t-.75-2.983q0-1.63.815-3.195 2.38 2.967 5.754 4.678t7.319 1.907q-.228-.815-.228-1.434 0-2.608 1.858-4.45t4.532-1.842q1.304 0 2.51.522t2.054 1.467q2.152-.424 4.01-1.532-.685 2.217-2.771 3.488 1.989-.261 3.619-.978z"></path></svg></a></span>
            {% endif %}
            {% if settings.pinterest_id != blank %}
              <span><a target="_blank" href="{{ settings.pinterest_id }}"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-pinterest pr-1" viewBox="0 0 256 256"><path d="M0 128.002c0 52.414 31.518 97.442 76.619 117.239-.36-8.938-.064-19.668 2.228-29.393 2.461-10.391 16.47-69.748 16.47-69.748s-4.089-8.173-4.089-20.252c0-18.969 10.994-33.136 24.686-33.136 11.643 0 17.268 8.745 17.268 19.217 0 11.704-7.465 29.211-11.304 45.426-3.207 13.578 6.808 24.653 20.203 24.653 24.252 0 40.586-31.149 40.586-68.055 0-28.054-18.895-49.052-53.262-49.052-38.828 0-63.017 28.956-63.017 61.3 0 11.152 3.288 19.016 8.438 25.106 2.368 2.797 2.697 3.922 1.84 7.134-.614 2.355-2.024 8.025-2.608 10.272-.852 3.242-3.479 4.401-6.409 3.204-17.884-7.301-26.213-26.886-26.213-48.902 0-36.361 30.666-79.961 91.482-79.961 48.87 0 81.035 35.364 81.035 73.325 0 50.213-27.916 87.726-69.066 87.726-13.819 0-26.818-7.47-31.271-15.955 0 0-7.431 29.492-9.005 35.187-2.714 9.869-8.026 19.733-12.883 27.421a127.897 127.897 0 0 0 36.277 5.249c70.684 0 127.996-57.309 127.996-128.005C256.001 57.309 198.689 0 128.005 0 57.314 0 0 57.309 0 128.002z"></path></svg></a></span>
            {% endif %}
            {% if settings.tiktok_id != blank %}
              <span><a target="_blank" href="{{ settings.tiktok_id }}"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-tiktok pr-1" viewBox="0 0 2859 3333"><path d="M2081 0c55 473 319 755 778 785v532c-266 26-499-61-770-225v995c0 1264-1378 1659-1932 753-356-583-138-1606 1004-1647v561c-87 14-180 36-265 65-254 86-398 247-358 531 77 544 1075 705 992-358V1h551z"></path></svg></a></span>
            {% endif %}
            {% if settings.linked_id != blank %}
              <span><a target="_blank" href="{{ settings.linked_id }}"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-linkedin pr-1" viewBox="0 0 24 24"><path d="M4.98 3.5C4.98 4.881 3.87 6 2.5 6S.02 4.881.02 3.5C.02 2.12 1.13 1 2.5 1s2.48 1.12 2.48 2.5zM5 8H0v16h5V8zm7.982 0H8.014v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0V24H24V13.869c0-7.88-8.922-7.593-11.018-3.714V8z"></path></svg></a></span>
            {% endif %}
          {% endif %}
        </div>
      </div>
   {%- endcase -%}
  {%- endfor -%}
    
  </div>
    <div class="flex justify-center"> 
      <span class=" pr-3">{{ section.settings.copyright_text }}</span>
      <span>
        {% for link in sub_menu_footer.links %}
            {%- liquid assign linkTitle = link.title | handleize-%}
                  <span class="pr-3">
                    <a href="{{ link.url }}">
                      {{ link.title }}
                    </a>
                  </span>
          {% endfor %}
       </span>
    </div>
</div>
