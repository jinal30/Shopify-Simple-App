<div class="relative py-10" data-section-id="{{ section.id }}">
  <div class="flex {{ section.settings.text_align }} {{ section.settings.header_size }}">
    <h1>{{ section.settings.title }}</h1>
  </div>



  <div class="container mx-auto">
    <div class="flex flex-wrap">
      {%- for block in section.blocks -%}
        {% liquid
              assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.'
            %}
        <div class="px-4 w-full md:w-1/3">
          <div>
            {%- if block.settings.image != blank -%}
              <div class="image-wrap {% if block.settings.image_shape_size != 'none' %}svg-mask svg-mask--{{ block.settings.image_shape_size }}{% endif %}" style="height: 0; padding-bottom: 100%;">
                <img class="flex" src="{{ block.settings.image | img_url: 'master' }}">
              </div>
            {%- endif -%}
          </div>
          <div class="{{ block.settings.text_aline }}">
            <div class="h2">{{ block.settings.heading_text }}</div>
            <div class="rich_text_space">{{ block.settings.rich_text }}</div>

            {%- if block.settings.btn_label_url != blank -%}
              <a href="{{ block.settings.btn_link_url }}" class="img_btn ">
                {{ block.settings.btn_label_url }}
              </a>
            {%- endif -%}

          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>

</div>


{% schema %}
  {
    "name": "Image with text",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading Title"
      },
      {
        "type": "select",
        "id": "header_size",
        "label": "Headeing Size",
        "default": "text-4xl font-bold dark:text-white",
        "options": [
          {
            "value": "text-4xl font-bold dark:text-white",
            "label": "large"
          }, {
            "value": "text-3xl font-bold dark:text-white",
            "label": "medium"
          }, {
            "value": "text-2xl font-bold dark:text-white",
            "label": "small"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_align",
        "label": "Text alignment",
        "default": "items-center",
        "options": [
          {
            "value": "items-center",
            "label": "Center left"
          }, {
            "value": "items-center justify-center",
            "label": "Center"
          }, {
            "value": "items-center justify-end",
            "label": "Center right"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "mega_products",
        "label": "Show section divider"
      }, {
        "type": "color",
        "id": "color_bg",
        "label": "Backgroud-color"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Example Title ",
        "settings": [
          {
            "type": "header",
            "content": "Details"
          },
          {
            "type": "checkbox",
            "id": "show_img",
            "label": "Show image"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Images"
          },
          {
            "type": "select",
            "id": "image_shape_size",
            "label": "Image Shape",
            "default": "none",
            "options": [
              {
                "value": "none",
                "label": "none"
              },
              {
                "value": "portrait",
                "label": "portrait"
              },
              {
                "value": "landscape",
                "label": "landscape"
              },
              {
                "value": "rounded",
                "label": "Round"
              }, {
                "value": "square",
                "label": "square"
              }
            ]
          }, {
            "type": "text",
            "id": "heading_text",
            "label": "Heading Text"
          }, {
            "type": "richtext",
            "id": "rich_text",
            "label": "Text"
          }, {
            "type": "text",
            "id": "btn_label_url",
            "label": "Button Label"
          }, {
            "type": "url",
            "id": "btn_link_url",
            "label": "Button Link"
          }, {
            "type": "select",
            "id": "text_aline",
            "label": "Text-Align",
            "default": "item-center text-center",
            "options": [
              {
                "value": "item-center text-center",
                "label": "center"
              }, {
                "value": "item-left text-left",
                "label": "left"
              }, {
                "value": "item-right text-right",
                "label": "right"
              }
            ]
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image with Text"

      }
    ]
  }
{% endschema %}